<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubUserApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/grey_800_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_900</item>
        <item name="colorSecondaryVariant">@color/grey_900_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color">@color/black</item>
    </style>

    <style name="tabFont" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/jbm_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/color</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>